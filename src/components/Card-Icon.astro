---
interface Props {
  title: string;
  description: string;
  icon: string;
}
const { title, description, icon } = Astro.props;
import { Icon } from "astro-icon/components";
---

<section
  class="flex flex-col w-1/3 bg-allports-950 rounded-2xl shadow-lg py-6 px-3 text-center items-center space-y-2 
   hover:scale-105 transition-transform duration-300 justify-evenly md:justify-normal"
>
  <Icon
    name={icon}
    class="text-alabaster-200 bg-allports-400 rounded-full p-3 shadow-md w-16 h-16 flex justify-center items-center"
  />
  <h3 class="md:text-2xl md:font-semibold text-alabaster-50 font-title">{title}</h3>
  <p class="text-xs font-thin md:font-normal md:text-sm text-alabaster-200">{description}</p>
</section>
